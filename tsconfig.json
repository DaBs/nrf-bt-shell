{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strict": true,
        "sourceMap": true,
        "lib": ["ESNext"],
        "outDir": "dist"
    },
    "include": [
        "src/**/*"
    ]
}